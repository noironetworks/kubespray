  name: aci-containers-host
  namespace: kube-system
  labels:
    k8s-app: aci-containers
spec:
  template:
    metadata:
      labels:
        name: aci-containers-host
    spec:
      hostNetwork: true
      hostPID: true
      hostIPC: true
      imagePullSecrets:
        - name: noiro-docker-registry-secret
      containers:
